<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newacc"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/fac_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingBottom="10dp"
            android:background="@drawable/borders">

            <ImageView
                android:id="@+id/fac_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/face_logo"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/txt_fac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FaceBook"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"

                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"



                />

            <TextView
                android:id="@+id/url_fac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/txt_fac"
                android:layout_marginTop="48dp"
                android:layout_centerHorizontal="true"

                android:text="@string/dolphin"
                android:textColor="#000000"
                android:textSize="30dp" />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/twit_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/fac_lay"
            android:layout_marginTop="10dp"
            android:background="@drawable/borders">

            <ImageView
                android:id="@+id/twit_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/twitter_logo" />

            <TextView
                android:id="@+id/txt_twit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Twitter"

                android:textColor="#000000"
                android:textSize="30dp"


                />

            <TextView
                android:id="@+id/url_twit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/twit_logo"
                android:layout_centerHorizontal="true"
                android:paddingBottom="15dp"
                android:text="@string/dolphin"
                android:textColor="#000000"
                android:textSize="30dp" />


        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/insta_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/twit_lay"
            android:layout_marginTop="10dp"
            android:background="@drawable/borders">

            <ImageView
                android:id="@+id/insta_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/insta_logo" />

            <TextView
                android:id="@+id/txt_insta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Instagram"

                android:textColor="#000000"
                android:textSize="30dp"


                />

            <TextView
                android:id="@+id/url_insta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/insta_logo"
                android:layout_centerHorizontal="true"
                android:paddingBottom="15dp"
                android:text="@string/dolphin"
                android:textColor="#000000"
                android:textSize="30dp" />


        </RelativeLayout>


    </RelativeLayout>
</FrameLayout>