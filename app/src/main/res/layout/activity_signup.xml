<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sign_frg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newacc">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        >

    <TextView

        android:id="@+id/txt_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColor="#000000"

        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        />

    <TextView

        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_sign"
        android:layout_centerHorizontal="true"
        android:text="Welcome back !"
        android:textColor="#000000"
        android:textSize="20dp" />


    <TextView

        android:id="@+id/txt_via"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/welcome"
        android:layout_alignRight="@+id/welcome"
        android:layout_below="@+id/welcome"
        android:layout_marginTop="33dp"
        android:text="sign in via facebook!"
        android:textColor="#000000"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/img_facebk"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txt_via"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/facebook" />

        <TextView

            android:id="@+id/entr_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_facebk"
            android:layout_centerHorizontal="true"
            android:text="or enter in your account info"
            android:textColor="#000000"
            android:textSize="15dp" />

    <EditText
        android:id="@+id/edt_user"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:layout_alignLeft="@+id/img_facebk"
        android:layout_alignStart="@+id/img_facebk"
        android:layout_below="@+id/entr_info"
        android:layout_marginTop="19dp"
        android:background="@drawable/custom_edit_text"
        android:drawableLeft="@drawable/ic_person_black_24dp" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:layout_alignLeft="@+id/edt_user"
        android:layout_alignStart="@+id/edt_user"
        android:layout_below="@+id/edt_user"
        android:background="@drawable/custom_edit_text"
        android:drawableLeft="@drawable/ic_lock_black_24dp" />


    <TextView

        android:id="@+id/forget_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/edt_password"
        android:layout_alignStart="@+id/edt_password"
        android:layout_below="@+id/edt_password"
        android:layout_marginTop="3dp"
        android:text="Forgot your password?"
        android:textColor="#000000"
        android:textSize="10dp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/needacc_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/forget_txt"
        android:layout_alignBottom="@+id/forget_txt"
        android:layout_alignEnd="@+id/edt_password"
        android:layout_alignRight="@+id/edt_password"
        android:text="Need an account?"
        android:textColor="#000000"
        android:textSize="10dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/entr_info"
        android:layout_alignRight="@+id/entr_info"
        android:layout_below="@+id/forget_txt"
        android:layout_marginTop="48dp"
        android:background="@drawable/custom_button"
        android:text="Sign in"
        android:textSize="20dp"
        android:textStyle="bold" />





    </RelativeLayout>

</FrameLayout>