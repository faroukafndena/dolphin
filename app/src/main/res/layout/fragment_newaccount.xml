<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jennifer1.dolphincatalogue.newaccount">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/rel_newacc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/newacc">


        <ImageView
            android:id="@+id/newacclogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"

            android:background="@drawable/finallogo"


            />

<RelativeLayout
    android:id="@+id/rel_contain"
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_height="wrap_content">
        <EditText
            android:id="@+id/signup_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:drawableRight="@drawable/ic_person_black_24dp"
            android:hint=" Name"
            android:inputType="text"
            android:textColorHint="#1E88E5"

            android:textStyle="bold"


            />

        <EditText
            android:id="@+id/signup_phone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_call_black_24dp"
            android:hint=" Phone Number"
            android:inputType="text"
            android:textColorHint="#1E88E5"

            android:textStyle="bold"


            />

        <EditText
            android:id="@+id/signup_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_email_black_24dp"
            android:hint=" E-mail"
            android:inputType="textEmailAddress"
            android:textColorHint="#1E88E5"
            android:textStyle="bold"


            />

        <EditText
            android:id="@+id/signup_pass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_lock_black_24dp"
            android:hint=" Password"
            android:inputType="textPassword"
            android:textColorHint="#1E88E5"
            android:textStyle="bold"


            />

        <TextView

            android:id="@+id/huv_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_pass"
            android:layout_centerHorizontal="true"
            android:text="I Have Account Sign Me In !"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"

            />
</RelativeLayout>

        <LinearLayout
            android:id="@+id/contain_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_below="@+id/rel_contain"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"

            android:orientation="horizontal">

d
            <Button
                android:id="@+id/btn_signup"

                android:layout_width="0dp"

                android:layout_height="50dp"

                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn"
                android:text="SIGN  UP"

                />

            <ImageView
                android:id="@+id/img_facebk"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/facebook" />
        </LinearLayout>

    </RelativeLayout>


</FrameLayout>
