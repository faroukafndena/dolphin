<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newacc">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/search_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
             android:background="@drawable/finallogo"
android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            >


        </ImageView>

        <RelativeLayout
            android:layout_below="@+id/search_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:id="@+id/dol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dolphin No"
                android:textSize="30dp"
                android:layout_marginTop="50dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                />

            <EditText
                android:id="@+id/edt_dol"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/dol"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                 android:layout_toEndOf="@+id/dol"
                android:inputType="number"
                android:hint="Dolphin No"
                android:background="#F8BBD0"
                android:layout_toRightOf="@+id/dol" />

            <TextView
                android:id="@+id/oem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OEM"
                android:textSize="30dp"
                android:layout_below="@id/dol"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/edt_oem"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:hint="OEM"
                android:layout_alignBottom="@+id/oem"
                android:layout_alignEnd="@+id/edt_dol"
                android:layout_alignLeft="@+id/edt_dol"
                android:layout_alignRight="@+id/edt_dol"
                android:layout_alignStart="@+id/edt_dol"

                android:background="#F8BBD0"
                android:inputType="number" />

            <TextView
                android:id="@+id/compet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Competitor No"
                android:textSize="30dp"
                android:layout_below="@id/oem"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/compt_num"
                android:layout_width="200dp"
                android:layout_height="40dp"

                android:layout_alignEnd="@+id/edt_oem"
                android:layout_alignRight="@+id/edt_oem"
                android:layout_below="@+id/compet"
                android:layout_marginTop="24dp"
                android:background="#F8BBD0"
                android:hint="Competitor No"
                android:inputType="number" />
            <Button
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_below="@+id/compt_num"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_button"
                android:layout_centerHorizontal="true"
                android:text="Search"
                android:textSize="20dp"
                android:textStyle="bold" />





        </RelativeLayout>











    </RelativeLayout>











































</RelativeLayout>

</FrameLayout>