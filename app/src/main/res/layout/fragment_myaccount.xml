<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jennifer1.dolphincatalogue.Myaccount">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/rel_myacc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/newacc">


        <ImageView
            android:id="@+id/newacclogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"

            android:background="@drawable/finallogo"


            />


        <EditText
            android:id="@+id/myacc_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newacclogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:drawableRight="@drawable/ic_person_black_24dp"
            android:hint=" Name"
            android:inputType="text"
            android:textColorHint="#1E88E5"

            android:textStyle="bold"


            />

        <EditText
            android:id="@+id/myacc_phone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myacc_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_call_black_24dp"
            android:hint=" Phone Number"
            android:inputType="text"
            android:textColorHint="#1E88E5"

            android:textStyle="bold"


            />

        <EditText
            android:id="@+id/myacc_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myacc_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_email_black_24dp"
            android:hint=" E-mail"
            android:inputType="textEmailAddress"
            android:textColorHint="#1E88E5"
            android:textStyle="bold"


            />

        <EditText
            android:id="@+id/myacc_pass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myacc_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_lock_black_24dp"
            android:hint=" Password"
            android:inputType="textPassword"
            android:textColorHint="#1E88E5"
            android:textStyle="bold"


            />


        <LinearLayout
            android:id="@+id/contain_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_below="@+id/myacc_pass"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <Button
                android:id="@+id/btn_signup"

                android:layout_width="0dp"

                android:layout_height="50dp"

                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn"
                android:text="SIGN  Out"

                />

            <Button
                android:id="@+id/img_facebk"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Save Data"
                android:layout_weight="1"
                android:background="@drawable/btn"

                />
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
